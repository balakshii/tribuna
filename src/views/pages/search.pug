//- search.pug

extends ../layout.pug
block variables
    - var title = 'Результаты поиска'
block content
    section.categoryPosts
        .container
            h1.main__title Результаты поиска
            .wrapColumn
                .columnMain
                    .boxSearchInput
                        input(type="text",name="search",value="Політика")
                    .posts__col3
                        include ../components/postCardThree
                    .postsShort
                        .postsShort__items
                            include ../components/postSearchCardShort
                        button.btn.btn-white Більше матеріалів
                            .btn__load
                                | <i class="fas fa-sync fa-spin"></i>
                .columnSidebar
                    include ../components/postCardOnce
                    .columnSidebar__item
                        img(src="./dist/img/banner_sidebar.jpg").sidebar_img
                    .columnSidebar__item.boxComments
                        .columnSidebar__itemTitle Комментарі
                        include ../components/comments
                    .columnSidebar__item
                        include ../components/postCardOnce